<p id="notice"><%= notice %></p>

<h1>Mine bedste film</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= link_to movie.title, movie%>
        </td>
        <td><%= movie.description %></td>
        <td><%= link_to 'Slet', movie, method: :delete, data: { confirm: 'Er du sikker?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Movie', new_movie_path, class: "btn btn-primary" %>
