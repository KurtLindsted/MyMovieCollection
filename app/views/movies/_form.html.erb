<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :imdbID %>
    <%= form.text_field :imdbID, :readonly => form.object.persisted? %>
  </div>
  <div class="field">
  <fieldset style="margin:8px 0 10px 0;width:200px">
    <%= form.label :image, 'Upload billede' %>
    <%= form.file_field :image%>
  </fieldset>
  </div>  

 

  <div class="actions">
    <%= form.submit "Gem film"%>
  </div>

<% end %>
